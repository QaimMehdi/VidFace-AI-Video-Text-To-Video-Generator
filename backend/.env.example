# Database configuration
# IMPORTANT: Replace with your actual database credentials
DATABASE_URL=mysql+pymysql://username:password@localhost/database_name

# JWT configuration - CHANGE THIS SECRET KEY
SECRET_KEY=your-super-secure-secret-key-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis configuration
REDIS_URL=redis://localhost:6379

# AWS S3 configuration (optional - only if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name

# AI API Keys (optional - only if using external AI services)
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# File storage settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600

# Video processing settings
MAX_VIDEO_DURATION=300
VIDEO_OUTPUT_DIR=C:/temp/vidface_videos

# Rate limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000

# Security settings
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5500

# Application settings
APP_NAME=VidFace API
APP_VERSION=1.0.0

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_DIGITS=true
REQUIRE_SPECIAL_CHARS=true

# Session settings
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15 