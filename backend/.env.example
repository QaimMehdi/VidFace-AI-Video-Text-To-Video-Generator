# database configuration
# for development (sqlite):
# DATABASE_URL=sqlite:///./vidface.db
# for production (mysql):
DATABASE_URL=mysql+pymysql://root:q1A2I3M4!!@localhost/vidface_db

# jwt configuration - generate a secure secret key
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# redis configuration
REDIS_URL=redis://localhost:6379

# aws s3 configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=vidface-videos

# ai service api keys - set these in production
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# file storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600

# video processing
MAX_VIDEO_DURATION=300
SUPPORTED_VIDEO_FORMATS=["mp4", "avi", "mov", "mkv"]
SUPPORTED_AUDIO_FORMATS=["mp3", "wav", "m4a"]

# rate limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000

# security settings
DEBUG=false
ALLOWED_HOSTS=["localhost", "127.0.0.1", "your-domain.com"]

# cors settings - restrict to your frontend domains
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://your-domain.com"]

# file upload security
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "mp4", "avi", "mov", "mkv"]
MAX_UPLOAD_SIZE=52428800

# password security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# session security
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# api security
API_KEY_HEADER=X-API-Key
API_KEY_REQUIRED=false

# content security policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:
CSP_FONT_SRC='self' https: 